
@model EMS.Models.Department

@{
    ViewBag.Title = "Create";
}

<h2 class="page-title">Create Department</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h4 class="form-heading">Department Details</h4>
        <hr class="form-separator" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Dept_ID, htmlAttributes: new { @class = "form-label" })
            <div class="form-input">
                @Html.EditorFor(model => model.Dept_ID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dept_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Dept_Name, htmlAttributes: new { @class = "form-label" })
            <div class="form-input">
                @Html.EditorFor(model => model.Dept_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dept_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-buttons">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
}

<div class="back-link">
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-image: url('https://www.the-corporate.com/public/profile_images/41765-1711004313.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        color: #ffffff;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .page-title {
        text-align: center;
        color: #007bff; /* Dodger Blue for headings */
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: 700;
    }

    .page-subtitle {
        text-align: center;
        color: #007bff; /* Dodger Blue for subtitles */
        margin-bottom: 20px;
        font-size: 1.5rem;
        font-weight: 400;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.8); /* Dark overlay background */
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
    }

    .form-heading {
        color: #007bff; /* Dodger Blue for subheadings */
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    .form-separator {
        border: none;
        border-top: 2px solid #007bff; /* Dodger Blue for separator */
        margin-bottom: 20px;
    }

    .details-list {
        margin: 0;
    }

    .form-label {
        font-weight: 500;
        color: #ddd; /* Light gray for labels */
    }

    .form-value {
        color: #ddd; /* Light gray for values */
    }

    .form-buttons, .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff; /* Dodger Blue for primary button */
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue for hover effect */
            transform: scale(1.02);
        }

    .btn-secondary {
        background-color: #6c757d; /* Secondary color for back button */
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker shade for hover */
            transform: scale(1.02);
        }

    .btn-danger {
        background-color: #dc3545; /* Red for delete button */
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red for hover */
            transform: scale(1.02);
        }

    .text-danger {
        color: #dc3545; /* Danger color for error messages */
    }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }

</style>