@model EMS.Models.Department

@{
    ViewBag.Title = "Delete";
}

<h2 class="page-title">Delete Department</h2>

<h3 class="page-subtitle">Are you sure you want to delete this?</h3>

<div class="form-container">
    <h4 class="form-heading">Department Details</h4>
    <hr class="form-separator" />
    <dl class="dl-horizontal">
        <dt class="form-label">
            @Html.DisplayNameFor(model => model.Dept_ID)
        </dt>
        <dd class="form-value">
            @Html.DisplayFor(model => model.Dept_ID)
        </dd>

        <dt class="form-label">
            @Html.DisplayNameFor(model => model.Dept_Name)
        </dt>
        <dd class="form-value">
            @Html.DisplayFor(model => model.Dept_Name)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
        </div>
    }
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f0f0f0; /* Light gray background */
        color: #333;
        margin: 0;
        padding: 0;
    }

    .page-title {
        text-align: center;
        color: #007bff; /* Dodger Blue for headings */
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: 700;
    }

    .page-subtitle {
        text-align: center;
        color: #007bff; /* Dodger Blue for subtitles */
        margin-bottom: 20px;
        font-size: 1.5rem;
        font-weight: 400;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.8); /* Dark overlay background */
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
    }

    .form-heading {
        color: #007bff; /* Dodger Blue for subheadings */
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    .form-separator {
        border: none;
        border-top: 2px solid #007bff; /* Dodger Blue for separator */
        margin-bottom: 20px;
    }

    .dl-horizontal {
        margin: 0;
    }

    .form-label {
        font-weight: 500;
        color: #ddd; /* Light gray for labels */
    }

    .form-value {
        color: #ffffff; /* White for values */
    }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff; /* Dodger Blue for primary button */
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue for hover effect */
            transform: scale(1.02);
        }

    .btn-secondary {
        background-color: #6c757d; /* Secondary color for back button */
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker shade for hover */
            transform: scale(1.02);
        }
</style>
