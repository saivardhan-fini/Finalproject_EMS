@model IEnumerable<EMS.Models.Department>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("CREATE NEW", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dept_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dept_Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Dept_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Dept_Name)
    </td>
    <td>
        <div class="action-buttons">
            <a href="@Url.Action("Edit", new { id = item.Dept_ID })" class="btn btn-primary">Edit</a> |
            <a href="@Url.Action("Details", new { id = item.Dept_ID })" class="btn btn-secondary">Details</a> |
            <a href="@Url.Action("Delete", new { id = item.Dept_ID })" class="btn btn-danger">Delete</a>
        </div>
    </td>

</tr>
    }

</table>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-image: url('https://www.the-corporate.com/public/profile_images/41765-1711004313.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        color: #ffffff;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    h2 {
        text-align: center;
        color: #007bff; /* Dodger Blue for headings */
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: 700;
    }

    p {
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin: 0 auto;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.8); /* Dark overlay background */
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
        color: #ffffff;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #ddd; /* Light gray border for table cells */
            text-align: left;
        }

        .table th {
            background-color: #333; /* Dark background for table headers */
            color: #ffffff; /* White text color for headers */
        }

        .table td {
            background-color: #444; /* Slightly lighter dark background for table rows */
        }

        .table a {
            color: #007bff; /* Dodger Blue for links */
            text-decoration: none;
        }

            .table a:hover {
                text-decoration: underline; /* Underline on hover for better visibility */
            }

            .table a:visited {
                color: #0056b3; /* Darker blue for visited links */
            }
    .btn {
        display: inline-block;
        padding: 8px 12px;
        border-radius: 6px;
        font-size: 1.4rem;
        font-weight: 700;
        text-align: center;
        text-decoration: none;
        color: #ffffff; /* Ensure text color is white */
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-primary {
        background-color: wheat; /* Dodger Blue */
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue */
            transform: scale(1.02);
        }

    .btn-secondary {
        background-color: ghostwhite; /* Secondary color */
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker shade */
            transform: scale(1.02);
        }

    .btn-danger {
        background-color: #dc3545; /* Red */
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red */
            transform: scale(1.02);
        }

</style>
