@model EMS.Models.Department

@{
    ViewBag.Title = "Edit";
}

<h2 class="page-title">Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h4 class="form-heading">Edit Department</h4>
        <hr class="form-separator" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Dept_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Dept_Name, htmlAttributes: new { @class = "form-label" })
            <div class="form-input">
                @Html.EditorFor(model => model.Dept_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dept_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="form-buttons">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="back-link">
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f0f0f0; /* Light gray background */
        color: #333;
        margin: 0;
        padding: 0;
    }

    .page-title {
        text-align: center;
        color: #007bff; /* Dodger Blue for headings */
        margin-bottom: 20px;
        font-size: 2rem;
        font-weight: 700;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.8); /* Dark overlay background */
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
    }

    .form-heading {
        color: #007bff; /* Dodger Blue for subheadings */
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    .form-separator {
        border: none;
        border-top: 2px solid #007bff; /* Dodger Blue for separator */
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #ddd; /* Light gray for labels */
    }

    .form-input {
        width: 100%;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #007bff; /* Dodger Blue border for input fields */
        border-radius: 4px;
        font-size: 1rem;
        color: #333;
        background-color: #f9f9f9; /* Light background color for input fields */
    }

    .btn-primary {
        background-color: #007bff; /* Dodger Blue for primary button */
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue for hover effect */
            transform: scale(1.02);
        }

    .btn-secondary {
        background-color: #6c757d; /* Secondary color for the back button */
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker shade for hover */
            transform: scale(1.02);
        }

    .text-danger {
        color: #dc3545; /* Danger color for error messages */
    }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }
</style>
