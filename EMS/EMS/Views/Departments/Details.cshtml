@model EMS.Models.Department

@{
    ViewBag.Title = "Details";
}

<h2 class="page-title">Details</h2>

<div class="form-container">
    <h4 class="form-heading">Department</h4>
    <hr class="form-separator" />
    <dl class="dl-horizontal">
        <dt class="form-label">
            @Html.DisplayNameFor(model => model.Dept_Name)
        </dt>
        <dd class="form-value">
            @Html.DisplayFor(model => model.Dept_Name)
        </dd>
    </dl>
</div>

<p class="action-links">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Dept_ID }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-image: url('https://www.the-corporate.com/public/profile_images/41765-1711004313.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        color: #ffffff;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .page-title {
        text-align: center;
        color: #007bff; /* Dodger Blue for headings */
        margin-bottom: 20px;
        font-size: 2rem;
        font-weight: 700;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.8); /* Dark overlay background */
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
    }

    .form-heading {
        color: #007bff; /* Dodger Blue for subheadings */
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    .form-separator {
        border: none;
        border-top: 2px solid #007bff; /* Dodger Blue for separator */
        margin-bottom: 20px;
    }

    .dl-horizontal {
        margin: 0;
    }

    .form-label {
        font-weight: 500;
        color: #ddd; /* Light gray for labels */
    }

    .form-value {
        color: #ffffff; /* White text color for values */
    }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff; /* Dodger Blue for primary button */
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue for hover effect */
            transform: scale(1.02);
        }

    .btn-secondary {
        background-color: #6c757d; /* Secondary color for the back button */
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker shade for hover */
            transform: scale(1.02);
        }
</style>
