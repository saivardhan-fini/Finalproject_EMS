@model IEnumerable<EMS.Models.Grade_master>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-title">GRADE MASTER LIST</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Min_Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Max_Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade_Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Min_Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Max_Salary)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Grade_Code }, new { @class = "btn btn-secondary btn-sm" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Grade_Code }, new { @class = "btn btn-secondary btn-sm" }) |
                  
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-image: url('https://www.the-corporate.com/public/profile_images/41765-1711004313.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        color: #ffffff;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .page-title {
        text-align: center;
        color: #007bff; /* Dodger Blue for headings */
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: 700;
    }

    .table {
        width: 100%;
        margin: 0 auto;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd; /* Light gray border for table rows */
            color : #000000; 
        }

        .table thead th {
            background-color: #007bff; /* Dodger Blue for table headers */
            color: #ffffff; /* White text for headers */
            font-weight: 700;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9; /* Light gray for alternate rows */
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #ffffff;
        border-radius: 6px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 700;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.02);
        }

    .btn-secondary {
        background-color: red;
        border-color: #6c757d;
        color: #ffffff;
        border-radius: 6px;
        padding: 8px 16px;
        font-size: 0.875rem;
        font-weight: 700;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.02);
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #ffffff;
        border-radius: 6px;
        padding: 8px 16px;
        font-size: 0.875rem;
        font-weight: 700;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
            transform: scale(1.02);
        }
</style>
