@model IEnumerable<EMS.Models.Holiday>

    @{
        ViewBag.Title = "Index";

    }
    <div>
    <h2 class="page-title">HOLIDAYS</h2>

    <p>

        @Html.ActionLink("CREATE NEW", "CREATE", null, new { @class = "btn btn-primary" })
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.HolidayName)</th>
                <th>@Html.DisplayNameFor(model => model.HolidayDate)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)

            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.HolidayName)</td>
                    <td>@Html.DisplayFor(modelItem => item.HolidayDate)</td>
                    <td class="action-buttons">

                        @Html.ActionLink("Edit", "Edit", new { id = item.HolidayID }, new { @class = "btn btn-primary" }) |

                        @Html.ActionLink("Details", "Details", new { id = item.HolidayID }, new { @class = "btn btn-secondary" }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.HolidayID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

