@model EMS.Models.Holiday

@{
    ViewBag.Title = "Edit";
}

<h2 class="page-title">Edit Holiday</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h4 class="form-heading">Edit Holiday Details</h4>
        <hr class="form-separator" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.HolidayID)
        @Html.HiddenFor(model => model.HolidayName)
        @Html.HiddenFor(model => model.HolidayDate)

        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}

<div class="back-link">
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f0f0f0; /* Light gray background for the page */
        color: #333;
        margin: 0;
        padding: 0;
    }

    .page-title {
        text-align: center;
        color: #007bff; /* Dodger Blue for headings */
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: 700;
    }

    .form-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.8); /* Dark overlay background */
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
    }

    .form-heading {
        color: #007bff; /* Dodger Blue for subheadings */
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    .form-separator {
        border: none;
        border-top: 2px solid #007bff; /* Dodger Blue for separator */
        margin-bottom: 20px;
    }

    .form-actions {
        text-align: center;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #ffffff;
        border-radius: 6px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 700;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.02);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
        border-radius: 6px;
        padding: 8px 16px;
        font-size: 0.875rem;
        font-weight: 700;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.02);
        }

    .text-danger {
        color: #dc3545; /* Danger color for error messages */
    }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }
</style>
